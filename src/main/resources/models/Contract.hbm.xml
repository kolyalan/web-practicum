<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping" package="models">
    <class name="Contract" table="contracts">
        <id name="id" column="con_id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>

        <many-to-one name="employee" class="Employee" column="emp_id" unique="true" not-null="true"/>
        <many-to-one name="department" class="Department" column="dep_id" unique="true" not-null="true" />
        <many-to-one name="position" class="Position" column="pos_id" unique="true" not-null="true" />
        <property name="employmentDate" column="employment_date" type="date"/>
        <property name="quitDate" column="quit_date" type="date"/>
    </class>
</hibernate-mapping>